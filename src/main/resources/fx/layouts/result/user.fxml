<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="user" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <HBox prefHeight="80.0" prefWidth="400.0" spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <ImageView fx:id="user_icon" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" />
             <VBox prefHeight="61.0">
                 <children>
                     <Label fx:id="user_name" styleClass="user_name" text="Label" />
                     <Label fx:id="user_description" prefHeight="43.0" styleClass="user_description" />
                 </children>
             </VBox>
         </children>
      </HBox>
   </left>
   <right>
      <VBox alignment="CENTER" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="user_score" alignment="CENTER" prefHeight="40.0" prefWidth="40.0" styleClass="user_score" text="0" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </right>
</BorderPane>
